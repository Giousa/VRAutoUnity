<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ut.vrautocycling.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="人数选择："
        android:textColor="#0000ff"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_count1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textColor="#0000ff"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_count2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10"
            android:textColor="#0000ff"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_count3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20"
            android:textColor="#0000ff"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_count4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30"
            android:textColor="#0000ff"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_count5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="40"
            android:textColor="#0000ff"
            android:textSize="25sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="速度选择："
        android:textColor="#0000ff"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_speed1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20"
            android:textColor="#0000ff"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_speed2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30"
            android:textColor="#0000ff"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_speed3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="40"
            android:textColor="#0000ff"
            android:textSize="25sp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="人数：1"
        android:textColor="#ff0000"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="速度：20"
        android:textColor="#ff0000"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btn_unity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3D模式测试"
        android:textColor="#ff0000"
        android:textSize="25sp"/>
</LinearLayout>
